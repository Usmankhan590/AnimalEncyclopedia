@model AnimalEncyclopedia.Models.Doct
@{
    ViewBag.Title = "Edit_Doctors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="main_content dashboard_part large_header_bg">

    <div class="main_content_iner ">
        <div class="container-fluid p-0">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="dashboard_header mb_50">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="dashboard_header_title">

                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="dashboard_breadcam text-right">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="white_box mb_30">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <!-- sign_in  -->
                                <div class="modal-content cs_modal">
                                    <div class="modal-header theme_bg_1 justify-content-center">
                                        <h5 class="modal-title text_white">Doctor</h5>
                                    </div>
                                    <div class="modal-body">
                                        @using (Html.BeginForm("Edit_Doctors", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <form>
                                                <div class="form-group">
                                                    <center>Title</center><br />
                                                    @Html.TextBoxFor(a => a.Title, null, new { @class = "form-control", placeholder = "Title", required = "", minlength = "3" })
                                                </div>

                                                <div class="form-group ">
                                                    <center>About</center><br />
                                                    @Html.TextBoxFor(a => a.About, null, new { @class = "form-control", placeholder = "About", required = "", minlength = "10" })
                                                </div>

                                                <div class="form-group ">
                                                    <center>Images</center><br />
                                                    <input type="file" name="img" required="" />
                                                </div>
                                                <input type="submit" value="Add" class="btn_1 full_width text-center" />


                                            </form>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

